<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/croco_nav_graph"
    app:startDestination="@id/croco_nav_graph_fragment_login">

    <fragment
        android:id="@+id/croco_nav_graph_fragment_login"
        android:name="com.example.crocoandroidapp.presentation.login.fragment.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/croco_nav_graph_action_login_to_croco"
            app:destination="@id/croco_nav_graph_fragment_croco"
            app:popUpTo="@id/croco_nav_graph_fragment_login"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/croco_nav_graph_fragment_croco"
        android:name="com.example.crocoandroidapp.presentation.croco.fragment.CrocoFragment"
        android:label="CrocoFragment"
        tools:layout="@layout/fragment_croco" />

    <action
        android:id="@+id/croco_nav_graph_action_global_login"
        app:destination="@id/croco_nav_graph_fragment_login" />

</navigation>