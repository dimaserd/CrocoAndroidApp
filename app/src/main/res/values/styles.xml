<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="BigAccentButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/big_accent_button_background</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">999dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:minWidth">160dp</item>
        <item name="android:minHeight">64dp</item>
    </style>

</resources>
